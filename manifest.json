{
    "manifest_version": 2,
    "name": "UCR MFA",
    "version": "1.0.3",
    "description": "A chrome extension for auto-filling UCR MFA",
    "icons":
    {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "browser_action": 
    {
        "default_icon": "img/icon.png",
        "default_title": "UCR MFA",
        "default_popup": "popup.html"
    },
    "background":
    {
        "scripts": ["js/jquery-3.4.1.min.js","js/daemon.js"]
    },
    "content_scripts": 
    [
        {
            "matches": ["https://myaccount.ucr.edu/casDuo?*"],
            "js": ["js/handler.js"],
            "run_at": "document_idle",
            "all_frames": true
        },
        {
            "matches": ["https://auth.ucr.edu/cas/login?service=*"],
            "js": ["js/login.js"],
            "run_at": "document_idle",
            "all_frames": true
        },
        {
            "matches": ["https://myaccount.ucr.edu/app*"],
            "js": ["js/jquery-3.4.1.min.js","js/getPasscodes.js"],
            "run_at":"document_idle",
            "all_frames": true
        }
    ],
    "permissions":
    [
        "webRequest", 
        "storage", 
        "https://myaccount.ucr.edu/casDuo?*",
        "https://auth.ucr.edu/cas/login?*",
        "https://myaccount.ucr.edu/app*",
        "notifications"
    ],
    "web_accessible_resources": ["js/inject.js", "js/login_inject.js"],
    "homepage_url": "https://github.com/mingjun97/ucr_mfa_crx",
    "devtools_page": "devtools.html"
}
